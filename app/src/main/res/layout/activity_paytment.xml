<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PaymentActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:orientation="vertical">
  <ImageButton
      android:id="@+id/ib_backbutton"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      android:background="@android:color/transparent"
      android:contentDescription="@string/app_name"
      android:src="@drawable/arrow_icon"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

  <TextView
      android:id="@+id/textView23"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/yeonsung"
      android:text="Edit"

      android:layout_gravity="center"
      android:textColor="@color/text_color"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ib_backbutton" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/profile_edit_text_shape"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/yeonsung"
        android:paddingStart="8dp"
        android:text="Name"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:paddingStart="8dp"
        android:fontFamily="@font/latoregular"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Name" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/profile_edit_text_shape"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/yeonsung"
        android:paddingStart="8dp"
        android:text="Address"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:paddingStart="8dp"
        android:fontFamily="@font/latoregular"
        android:inputType="textMultiLine"
        android:text="Address"
        tools:ignore="TouchTargetSizeCheck" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/profile_edit_text_shape"
      android:gravity="center_vertical"
      android:orientation="horizontal"
     >

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/yeonsung"
        android:paddingStart="8dp"
        android:text="Phone"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:paddingStart="8dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/latoregular"
        android:inputType="phone"
        android:minHeight="48dp"
        android:text="9869251732" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/profile_edit_text_shape"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/yeonsung"
        android:paddingStart="8dp"
        android:text="Payment Method"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cashondelivery_1" />

  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:background="@drawable/profile_edit_text_shape"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/yeonsung"
        android:paddingStart="8dp"
        android:text="Total Amount"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/latoregular"
        android:gravity="end|center_vertical"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingEnd="32dp"
        android:text="Rs.35"

        android:textColor="@color/text_color" />
  </LinearLayout>
  </LinearLayout>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_placeorder"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_gravity="bottom"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="32dp"
      android:background="@drawable/profile_edit_text_shape"
      android:fontFamily="@font/yeonsung"
      android:text="Place My Order"
      android:textAllCaps="false"
      android:textColor="@color/text_color" />
</FrameLayout>